@model IEnumerable<CapstoneJesseGajda.Models.Exercises>

@{
    ViewData["Title"] = "Index";
}

<h2>Manage and create new exercise's.</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciseID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ExerciseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
