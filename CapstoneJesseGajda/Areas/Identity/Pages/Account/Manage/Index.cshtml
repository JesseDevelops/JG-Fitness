@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewCustomUsername"></label>
                <input asp-for="Input.NewCustomUsername" class="form-control" />
                <span asp-validation-for="Input.NewCustomUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserCurrentWeight"></label>
                <input asp-for="Input.UserCurrentWeight" class="form-control" />
                <span asp-validation-for="Input.UserCurrentWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserHeight"></label>
                <input asp-for="Input.UserHeight" class="form-control" />
                <span asp-validation-for="Input.UserHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserDOB"></label>
                <input asp-for="Input.UserDOB" class="form-control" />
                <span asp-validation-for="Input.UserDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserCountry"></label>
                <input asp-for="Input.UserCountry" class="form-control" />
                <span asp-validation-for="Input.UserCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserPostalCode"></label>
                <input asp-for="Input.UserPostalCode" class="form-control" />
                <span asp-validation-for="Input.UserPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <a href="@Url.Action("Index","Exercises")" id="identityBtn">ADMIN PAGE</a>
    </div>
</div>
<link rel="stylesheet" type="text/css" href="~/css/Identity.css" />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
