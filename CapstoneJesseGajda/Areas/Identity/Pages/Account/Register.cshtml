@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewCustomUsername"></label>
                <input asp-for="Input.NewCustomUsername" class="form-control" />
                <span asp-validation-for="Input.NewCustomUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" autofocus class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserCurrentWeight"></label>
                <input asp-for="Input.UserCurrentWeight" class="form-control" />
                <span asp-validation-for="Input.UserCurrentWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserHeight"></label>
                <input asp-for="Input.UserHeight" class="form-control" />
                <span asp-validation-for="Input.UserHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserDOB"></label>
                <input asp-for="Input.UserDOB" class="form-control" />
                <span asp-validation-for="Input.UserDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserCountry"></label>
                <input asp-for="Input.UserCountry" class="form-control" />
                <span asp-validation-for="Input.UserCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserPostalCode"></label>
                <input asp-for="Input.UserPostalCode" class="form-control" />
                <span asp-validation-for="Input.UserPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
